<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootMenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu_gradient"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Icono nube (placeholder) -->
    <ImageView
        android:id="@+id/imgCloud"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:contentDescription="cloud"
        android:src="@android:drawable/ic_menu_compass"
        app:layout_constraintTop_toTopOf="@id/imgLogo"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Saludo -->
    <TextView
        android:id="@+id/txtSaludo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/menu_saludo_fallback"
        android:textColor="@color/mb_text_primary"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"/>

    <TextView
        android:id="@+id/txtSubtitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/menu_subtitulo"
        android:textColor="@color/mb_text_secondary"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/txtSaludo"
        app:layout_constraintStart_toStartOf="@id/txtSaludo"
        app:layout_constraintEnd_toEndOf="@id/txtSaludo"
        android:layout_marginTop="6dp"/>

    <!-- Card: Mis Actividades -->
    <LinearLayout
        android:id="@+id/cardActividades"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:background="@drawable/card_green"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/txtSubtitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp">

        <ImageView
            android:id="@+id/iconActividades"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="actividades"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_btn_actividades"
                android:textColor="@color/mb_card_text"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_btn_actividades_desc"
                android:textColor="@color/mb_card_text"
                android:textSize="13sp"
                android:alpha="0.9"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="go"/>
    </LinearLayout>

    <!-- Card: Recompensa -->
    <LinearLayout
        android:id="@+id/cardRecompensa"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:background="@drawable/card_orange"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/cardActividades"
        app:layout_constraintStart_toStartOf="@id/cardActividades"
        app:layout_constraintEnd_toEndOf="@id/cardActividades"
        android:layout_marginTop="14dp">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:contentDescription="recompensa"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_btn_recompensa"
                android:textColor="@color/mb_card_text"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_btn_recompensa_desc"
                android:textColor="@color/mb_card_text"
                android:textSize="13sp"
                android:alpha="0.9"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="go"/>
    </LinearLayout>

    <!-- Card: Mi Perfil -->
    <LinearLayout
        android:id="@+id/cardPerfil"
        android:layout_width="0dp"
        android:layout_height="82dp"
        android:background="@drawable/card_blue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/cardRecompensa"
        app:layout_constraintStart_toStartOf="@id/cardRecompensa"
        app:layout_constraintEnd_toEndOf="@id/cardRecompensa"
        android:layout_marginTop="14dp">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="perfil"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_btn_perfil"
                android:textColor="@color/mb_card_text"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_btn_perfil_desc"
                android:textColor="@color/mb_card_text"
                android:textSize="13sp"
                android:alpha="0.9"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="go"/>
    </LinearLayout>

    <!-- Personaje (placeholder) -->
    <ImageView
        android:id="@+id/imgPersona"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitCenter"
        android:src="@android:drawable/ic_menu_gallery"
        android:contentDescription="persona"
        app:layout_constraintTop_toBottomOf="@id/cardPerfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

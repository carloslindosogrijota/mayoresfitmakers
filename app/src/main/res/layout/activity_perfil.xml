<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- ScrollView con el contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_background"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <!-- Bot칩n de retroceso -->
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Volver"
                    android:layout_marginEnd="16dp"/>

                <!-- T칤tulo -->
                <TextView
                    android:id="@+id/tvHeaderTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MI PERFIL"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- Contenido del perfil -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="43dp">

                <!-- T칤tulo Perfil -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="Perfil"
                    android:textColor="#4A90A4"
                    android:textSize="58sp"
                    android:textStyle="bold" />

                <!-- Racha -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="游댠"
                        android:textSize="50sp"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/txtRacha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textSize="50sp"
                        android:textColor="#FF6B35"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Racha"
                        android:textSize="40sp"
                        android:textColor="#333333"/>

                </LinearLayout>

                <!-- Informaci칩n Personal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="20dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informaci칩n Personal"
                        android:textSize="27sp"
                        android:textColor="#7CBF9E"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nombre:"
                            android:textSize="24sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/txtNombre"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="Usuario"
                            android:textSize="24sp"
                            android:textColor="#333333"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Edad:"
                            android:textSize="24sp"
                            android:textColor="#666666"/>

                        <TextView
                            android:id="@+id/txtEdad"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:text="-- a침os"
                            android:textSize="24sp"
                            android:textColor="#333333"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- Patolog칤as -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="20dp"
                    android:layout_marginBottom="80dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patolog칤as"
                        android:textSize="27sp"
                        android:textColor="#F4A261"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/txtPatologias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ninguna registrada"
                        android:textSize="24sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Barra de navegaci칩n inferior (fija) -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#4CAF50"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <!-- Bot칩n Perfil -->
        <LinearLayout
            android:id="@+id/btnPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_person"
                android:contentDescription="Perfil"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- Bot칩n Men칰 -->
        <LinearLayout
            android:id="@+id/btnMenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_home"
                android:contentDescription="Men칰"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Men칰"
                android:textColor="#666666"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>